                        <ul>
                            <li>Free Internet</li>
                            <li>Free Breakfast</li>
                            <li>Free Lunch or Free Dinner</li>
                            <li>Free Early Check-in</li>
                            <li>BonFire</li>
                            <li>Wake Up</li>
                        </ul>
                        <span>*Taxes and other included</span>
                    <% }) %>
                </div>
                
            </div>
        </div> 


        

        <script src="/javascripts/show.js"></script>

    </body>
</html>