<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Campground</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/stylesheets/show.css">
        <link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet"> 
    </head>
    <body>

        <navbar>
            <div>
                <a href="/home">YelpCamp</a>
            </div>

            <ul>
                <% if(!currentUser){ %> 
                <li><a href="/login">Log in</a></li>
                <li><a href="/register">Sign up</a></li>
                <% }else{ %>
                <li><a href="#">Signed in as <%= currentUser.username %></a></li>
                <li><a href="/logout">Log out</a></li>
                <% } %>
                <li><a href="/home/add">Add a camp</a></li>
            </ul>
        </navbar>


        <div class="show">
            <div class="sidebar">
                <ul>
                    <li id="home">Home</li>
                    <hr id="h1">
                    <li id="price">Price</li>
                    <hr id="h2" style="display: none;">
                    <li id="desc">Description</li>
                    <hr id="h3" style="display: none;">
                    <li id="review">Reviews</li>
                    <hr id="h4" style="display:none;">
                </ul>
            </div>
            <div class="details">
                <div class="home">
                    <% campground.forEach(function(campground){ %>
                    <h1><%= campground.name %></h1>
                    <img src="<%= campground.imageurl %>">
                    <% }) %>
                </div>

                <div class="price">
                    <% campground.forEach(function(campground){ %>
                        <h1>Price of the campground :</h1>
                        <h2>$ <%= campground.price %>/per Night</h2>
                        <p>Space for only 2 person in one Camp. For an extra bed please inform the authorities one day prior to arrival
