<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Campground</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/stylesheets/show.css">
    </head>
    <body>

        <navbar>
            <h1><a href="/home">YelpCamp</a></h1>

            <ul>
                <% if(!currentUser){ %> 
                <li><a href="/login">Log in</a></li>
                <li><a href="/register">Sign up</a></li>
                <% }else{ %>
                        <li><a href="#">Signed in as <%= currentUser.username %></a></li>
                        <li><a href="/logout">Log out</a></li>
                        <% } %>
            </ul>
        </navbar>

        <div class="info">
            <div class="sidebar">

            </div>
            <div class="details">
                <% campground.forEach(function(campground){ %>
                <h1 style="text-align: center;text-transform: uppercase;padding: 5px;"><%= campground.name %></h2>
                <img src=<%= campground.imageurl %>>
                <p style="position: relative;display: flex;flex-direction: row-reverse;padding-right: 10px;">Price - $<%= campground.price %></p>
                <p> Description : <br> <%= campground.description %></p>
                <% }) %>
                <h3>Comments</h3>
                <% if(currentUser){ %>
                <textarea></textarea>
                <% } %>
            </div>
        </div>
        



    </body>
</html>